<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:background="@android:color/holo_blue_dark"
android:paddingTop="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:scrollbars="vertical"
>

<ImageView
    android:layout_width="70dp"
    android:layout_height="100dp"
    android:id="@+id/iv_home"
    android:textAlignment="center"
    android:layout_marginLeft="30dp"
    android:src="@drawable/home1"/>
<ImageView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="140dp"
    android:id="@+id/iv_gallery"
    android:layout_marginLeft="30dp"
    android:src="@drawable/gallery1"/>
<ImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:id="@+id/iv_messages"
    android:layout_marginTop="280dp"
    android:layout_marginLeft="30dp"
    android:src="@android:drawable/stat_notify_chat"/>


<ImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:id="@+id/iv_familytree"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="418dp"
    android:src="@drawable/abc_ic_voice_search_api_mtrl_alpha" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/iv_home"
    android:layout_marginLeft="30dp"
    android:textColor="#fde1ab"
    android:textStyle="bold"
    android:textSize="26dp"
    android:text="Home"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="240dp"
    android:layout_marginLeft="30dp"
    android:textColor="#fde1ab"
    android:textStyle="bold"
    android:text="Gallery"
    android:textSize="25dp"/>



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="360dp"
    android:layout_marginLeft="30dp"
    android:textColor="#fde1ab"
    android:textStyle="bold"
    android:text="Messages"
    android:textSize="25dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Audio"
    android:textStyle="bold"
    android:textSize="25dp"
    android:layout_marginLeft="30dp"
    android:layout_below="@+id/iv_familytree"
    android:textColor="#fde1ab"/>


</RelativeLayout>
